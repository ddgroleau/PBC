@inject ICreateRecipeEvent Event

<div class="card">

    <h4 class="card-header">
       Create a Recipe!
    </h4>

    <div class="card-body">
        <EditForm class="create-recipe-form" Model="@Event.RecipeUrlDTO" OnSubmit=@(()=>Event.HandleSubmit())>
            <DataAnnotationsValidator />

            <InputText @bind-Value="@Event.RecipeUrlDTO.URL" class="form-control" DisplayName="Recipe URL" />
            <ValidationMessage For="@(() => @Event.RecipeUrlDTO.URL)" />

                <LoadingButton Loading="@Event.Lazor.Loading">
                    <span>Create</span>
                    </LoadingButton>

        </EditForm>
    </div>

        <CascadingValue Name="Lazor" Value="@Event.Lazor">
            <CascadingValue Name="RecipeDTO" Value="@Event.RecipeDTO">
                <EditRecipeModal HandleClick=@(()=>Event.ResetView()) />
            </CascadingValue>
        </CascadingValue>

</div>
