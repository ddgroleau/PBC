<nav class="navbar navbar-expand-sm navbar-light bg-light"><p>DummyNavBar</p></nav>
<nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">

    <a class="navbar-brand" href="#">RecipeBot</a>
    <button class="btn" type="button" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon d-block d-sm-none"></span>
    </button>

    <!--Show if NavBar<=sm -->
    <div class="col-12 @NavMenuCssClass d-sm-none">
        <NavBarLinks />
    </div>
    
    <!--Show if NavBar>sm  -->
    <div class="col-12 d-none d-sm-block">
        <NavBarLinks />
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
